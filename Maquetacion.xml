?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <!-- Vista de Imagen para la Visualización en 360 Grados -->
    <ImageView
        android:id="@+id/imageView360"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagen360_placeholder" />

    <!-- Botón para Iniciar la Experiencia Virtual -->
    <Button
        android:id="@+id/btnIniciarVR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView360"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Iniciar Experiencia Virtual" />

    <!-- Otros elementos de la interfaz de usuario se pueden agregar aquí -->

</RelativeLayout>
